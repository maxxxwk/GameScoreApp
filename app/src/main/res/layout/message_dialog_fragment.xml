<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/champagne"
    android:padding="32dp">

    <TextView
        android:id="@+id/tvDialogTitle"
        style="@style/TextViewTitle"
        android:textAlignment="center"
        android:textColor="@color/scarpa_flow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Message dialog title" />

    <TextView
        android:id="@+id/tvDialogMessage"
        style="@style/TextView"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textColor="@color/scarpa_flow"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/tvDialogTitle"
        app:layout_constraintRight_toRightOf="@id/tvDialogTitle"
        app:layout_constraintTop_toBottomOf="@id/tvDialogTitle"
        tools:text="Message text" />

    <Button
        android:id="@+id/btnConfirm"
        style="@style/Button"
        android:layout_marginTop="32dp"
        android:text="@string/confirm_button_text"
        app:layout_constraintLeft_toLeftOf="@id/tvDialogMessage"
        app:layout_constraintRight_toRightOf="@id/tvDialogMessage"
        app:layout_constraintTop_toBottomOf="@id/tvDialogMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>